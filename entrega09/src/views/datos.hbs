<header>
  <h1 style="color:blue;">Lista de productos</h1>
</header>
<main>
  {{#if arrayProduct}}
    <div class="table-responsive">
      <table class="table table-dark">
        <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Thumbnail</th> </tr>
        {{#each arrayProduct}}
          <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" alt="Imagen del producto" style="width: 4rem;"></td>
          </tr>
        {{/each}}
      </table>
    </div>
  {{/if}}
  {{#unless arrayProduct}}
    <h3 class="alert alert-danger">{{err.message}}</h3>
  {{/unless}}
  </main>
<footer>
  <a href="/"><button class="btn btn-success mt-3 mb-5">Ir a a√±adir producto</button></a>
</footer>





