<div class="container mt-2">
        <div class="jumbotron">
            <h1>Formulario</h1>

              <form action="/datos" method="post">

                <div class="form-group">
                  <label for="nombre"><b>Nombre</b></label>
                  <input type="text" id="nombre" class="form-control" name="nombre" />
                </div>
                <div class="form-group">
                  <label for="precio"><b>Precio</b></label>
                  <input type="number" id="precio" class="form-control" name="precio" />
                </div>
                <div class="form-group">
                  <label for="url"><b>Url</b></label>
                  <input type="text" id="url" class="form-control" name="url" />
                </div>

                <button class="btn btn-success mt-3 mb-5">Enviar</button>
              </form>


{{#if productos.length}}

  <div  class="table-responsive">
    <table action="/datos" class="table table-dark">
      <tr style="color: rgb(66, 61, 135);">
        <th>Nombre</th>
        <th>Precio</th>
        <th>Url</th>
      </tr>
      {{#each productos}}
        <tr>
          <td>{{nombre}}</td>
          <td>{{precio}}</td>
          <td>{{url}}</td>
        </tr>
      {{/each}}
    </table>

    <div>

    </div>
  </div>
{{else}}
  <h3 class="alert alert-danger">No se encontraron datos</h3>
{{/if}}
<button
        onclick={window.location.replace("/formulario")}
        type="button"
        class="btn btn-success"
      >Volver</button>

        </div>
</div>



